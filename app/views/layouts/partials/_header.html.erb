<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("title"), home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.head"), home_path %></li>
        <li><%= link_to t("static_pages.help.head"), help_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to "#" do %>
              <%= t "users.show.account" %><b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.show.profile"), current_user %></li>
              <li><%= link_to t("users.show.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
